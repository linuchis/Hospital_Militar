        <!-- Estilo personalizado para el CheckBox -->
        <Style TargetType="CheckBox" x:Key="LargeCheckBoxStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
