<Window x:Class="PoxterMilitar.Views.Alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoxterMilitar.Views"
        mc:Ignorable="d"
        Title="Alert" Width="600" Height="350" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Name="lblMensaje" Text="Mensaje" FontSize="24" FontFamily="Verdana"  Height="90" Margin="0,122,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" />

        <Button 
            x:Name="Accept" 
            Content="     Aceptar" 
            Style="{StaticResource ButtonLogOut}" 
            Margin="0,203,0,0" 
            HorizontalAlignment="Center" 
            Background="#FF3383C3"
            Width="197" 
            RenderTransformOrigin="0.5,0.5" 
            FontSize="20" 
            VerticalAlignment="Top"
            Click="Button_OK">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
