<Window x:Class="PoxterMilitar.Views.Recover_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoxterMilitar.Views"
        mc:Ignorable="d"
        Title="Recover_Password" Width="600" Height="350">


    <Grid>
        <Label Content="Por favor, diríjase con soporte técnico." FontSize="24" FontFamily="Verdana"  Height="45" Margin="0,122,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Button 
        x:Name="Accept" 
        Content="     Aceptar" 
        Style="{StaticResource ButtonLogOut}" 
        Margin="0,203,0,0" 
        HorizontalAlignment="Center" 
        Width="197" 
        Background="#FFE84B10" 
        RenderTransformOrigin="0.5,0.5" 
        FontSize="20" 
        VerticalAlignment="Top"
        Click="Button_Cancel">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
